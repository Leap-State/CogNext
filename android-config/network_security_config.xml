<?xml version="1.0" encoding="utf-8"?>
<!--
  CONFIGURAÇÃO DE SEGURANÇA DE REDE PARA COGNEXT
  
  Copie este arquivo para:
  android/app/src/main/res/xml/network_security_config.xml
  
  Depois adicione no AndroidManifest.xml dentro da tag <application>:
  android:networkSecurityConfig="@xml/network_security_config"
-->
<network-security-config>
    <!-- Configuração base para produção -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Domínios confiáveis (HTTPS) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">lovableproject.com</domain>
        <domain includeSubdomains="true">lovable.app</domain>
        <domain includeSubdomains="true">googleads.g.doubleclick.net</domain>
        <domain includeSubdomains="true">pagead2.googlesyndication.com</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
    </domain-config>
</network-security-config>
